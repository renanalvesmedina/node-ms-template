{
    "compilerOptions": {
        "rootDir": "src",
        "declaration": true,
        "lib": [
            "es2018",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "outDir": "./dist",
        "target": "es2018",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "removeComments": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/**/*",
        "index.ts"
    ],
    "typedocOptions": {
        "entryPoints": [
            "./src/index.ts",
            "./src/core/index.ts",
            "./src/handlers/index.ts",
            "./src//helpersindex.ts",
            "./src/resolvers/index.ts",
            "./src/router/index.ts",
            "./src/services/index.ts",
            "./src/types/index.ts",
        ],
        "out": "docs",
        "entryPointStrategy": "Resolve",
        "name": "Boilerplate-BFF"
    }
}